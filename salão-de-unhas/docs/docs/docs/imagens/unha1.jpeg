body {
    font-family: Arial, sans-serif;
    background-color: #fdf2f8;
    margin: 0;
    padding: 0;
}

header {
    background: linear-gradient(135deg, #e91e63, #f48fb1);
    color: white;
    text-align: center;
    padding: 50px 20px;
}

header p {
    font-size: 18px;
}


main {
    padding: 20px;
}

section {
    margin-bottom: 30px;
}

h2 {
    color: #e91e63;
}

footer {
    background-color: #fce4ec;
    color: #555;
    font-size: 14px;
}

main {
    max-width: 900px;
    margin: auto;
}
section ul {
    list-style: none;
    padding: 0;
}

section li {
    background-color: #ffffff;
    padding: 12px;
    margin-bottom: 10px;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
h1 {
    margin-bottom: 10px;
}

h3 {
    margin-top: 20px;
    color: #c2185b;
}
p {
    line-height: 1.6;
}
#contato {
    text-align: center;
}

.whatsapp-button {
    display: inline-block;
    background-color: #25d366;
    color: white;
    padding: 15px 25px;
    margin-top: 15px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: bold;
    font-size: 16px;
}

.whatsapp-button:hover {
    background-color: #1ebe5d;
}
@media (max-width: 600px) {

    header {
        padding: 20px 10px;
    }

    h1 {
        font-size: 26px;
    }

    h2 {
        font-size: 22px;
    }

    main {
        padding: 15px;
    }

    .whatsapp-button {
        width: 100%;
        box-sizing: border-box;
    }
}
section {
    background-color: #ffffff;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
}
h2 {
    position: relative;
    margin-bottom: 20px;
}

h2::after {
    content: "";
    display: block;
    width: 60px;
    height: 4px;
    background-color: #e91e63;
    margin-top: 8px;
}
* {
    transition: 0.3s;
}
.galeria {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
}

.galeria img {
    width: 100%;
    border-radius: 12px;
    object-fit: cover;
}
